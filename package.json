{
  "name": "@tnezdev/actions",
  "version": "0.3.0",
  "description": "Patterns to express business logic using dependency injection for side-effects",
  "repository": {
    "type": "git",
    "url": "https://github.com/tnez/actions.git"
  },
  "license": "Apache-2.0",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": {
        "node": "./dist/index.js",
        "default": "./dist/index.js"
      },
      "require": {
        "node": "./dist/index.cjs",
        "default": "./dist/index.cjs"
      }
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch --clean=false",
    "lint": "eslint --max-warnings=0 .",
    "prepublishOnly": "pnpm run build",
    "prettier-check": "prettier --check .",
    "publint": "pnpm prepublishOnly && npx publint",
    "release": "pnpm prepublishOnly && changeset publish",
    "test": "jest --env node .test.ts",
    "type-check": "tsc --noEmit",
    "version": "changeset version && pnpm i --no-frozen-lockfile && git add ."
  },
  "lint-staged": {
    "*": [
      "prettier --ignore-unknown --write"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "2.26.2",
    "@edge-runtime/jest-environment": "2.2.4",
    "@edge-runtime/types": "2.1.3",
    "@types/jest": "29.5.2",
    "@types/node": "20.3.2",
    "@vercel/style-guide": "4.0.2",
    "eslint": "8.43.0",
    "husky": "8.0.3",
    "jest": "29.5.0",
    "jest-mock-extended": "3.0.4",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "publint": "0.1.13",
    "ts-jest": "29.1.1",
    "tsup": "7.1.0",
    "typescript": "5.1.6"
  },
  "packageManager": "pnpm@8.6.5",
  "engines": {
    "node": ">=18"
  }
}
